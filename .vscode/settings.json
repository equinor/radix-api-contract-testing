{
    "editor.insertSpaces": true,
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "node_modules/": true,
        "workspace/*/*": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "eslint.enable": true,
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#5e1c60",
        "titleBar.inactiveBackground": "#5e1c6099",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveForeground": "#e7e7e799",
        "statusBar.background": "#5e1c60",
        "statusBarItem.hoverBackground": "#852887",
        "statusBar.foreground": "#e7e7e7"
    }
}
